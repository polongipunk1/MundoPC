<body class="fondo-login">
    <div class="modal-dialog text-center">
        <div class="col-sm-12 main-section">
            <div class="modal-content">
                <div class="col-12 user-img">
                    <img src="~/img/avatar.png" alt="">
                </div>
                <form class="col-12 needs-validation">
                    <div class="form-group" id="user-group">
                        <input class="form-control" type="text" placeholder="Nombre de usuario" required>
                    </div>
                    <div class="form-group" id="password-group">
                        <input class="form-control" type="password" placeholder="Ingrese contraseña" required>
                    </div>
                    <button type="submit" class="btn btn-primary" formaction="finalizar_compra"><i class="fas fa-sign-in-alt"></i> Ingresar</button>
                </form>
                <div class="col-12 forgot">
                    <a>@Html.ActionLink("Crear una cuenta", "login", "Home")</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</body>
